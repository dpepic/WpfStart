<Window x:Class="WpfApp18.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp18"
        mc:Ignorable="d"
        Title="MainWindow">
	<Window.Background>
		<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
			<GradientStop Color="Black" Offset="0"/>
			<GradientStop Color="#FFC51111" Offset="1"/>
		</LinearGradientBrush>
	</Window.Background>

	<DockPanel>
		<StackPanel>
			<Button FontSize="34" >asdasd
			</Button>
			<Label FontSize="34" Content="{Binding NekiBroj}" />
			<TextBox FontSize="34" Text="{Binding NekiBroj, UpdateSourceTrigger=PropertyChanged}"/>
		</StackPanel>
	</DockPanel>
</Window>
